{
  "info": {
    "name": "Ecommerce API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/register",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"newpass\",\n  \"name\": \"New User\",\n  \"role\": \"customer\"\n}"
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/login",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Get Products",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/products",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "products"
          ]
        }
      }
    },
    {
      "name": "Add to Cart (Customer Only)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <token>"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/cart",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "cart"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": 1,\n  \"productId\": 2,\n  \"quantity\": 1\n}"
        }
      }
    },
    {
      "name": "Create Product (Admin Only)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <admin_token>"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/products",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "products"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Smart Watch\",\n  \"description\": \"Fitness tracking smart watch\",\n  \"price\": 59.99,\n  \"category\": \"Wearables\",\n  \"stock\": 30\n}"
        }
      }
    }
  ]
}